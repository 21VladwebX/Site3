.request
	color: blue;
	height: 520px;
	width: 400px;
	position: absolute;
	top: 335px;
	left: 900px;
	background-color: #fff;
	text-align: center;
	border-radius: 10px;

	&__title
		margin: 33px 25% 0 25%;
		span
			font-size: 1.3em;
			text-transform: uppercase;
			font-weight: bold;
			margin-bottom: 23px;
	form
		input
			margin:0 24px 0 24px;
			margin-top: 17px;
			padding: 9px;
			height: 37px;
			width: 335px;
			font-size: 14px;
			background-color: input;
			border-radius: 5px;
		.check
			display: grid;
			// grid-template-rows: 37px;
			// grid-template-columns: 20px 100px 100px  ;	
			padding: 0;
			padding: 20px;	
			margin: 0;
			justify-items: center;
			align-items: center;
			input[type="checkbox"]
				width: 19px;
				height: 18px;
				border-radius: 3px;
				background-color: input;
				grid-column-start: 1;
				grid-column-end: 1;
				margin: 0;
				// margin-bottom: 12px;
				grid-row-start: 1;
				grid-row-end: 2;
				
			label
				font-size: 16px;
				grid-column-start: 1;
				grid-column-end: 5;
				grid-row-start: 1;
				grid-row-end: 2;
		
		button
			width: 353px;
			height: 57px;
			background-color: #c62314;
			color: #fff;
			text-transform: uppercase;
			font-size: 1.3em;
			border-radius: 5px;
			border: none;
			