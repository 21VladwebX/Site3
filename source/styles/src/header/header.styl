.head
	background-image: url("../images/maket/maket123.jpg") ;
	background-repeat: no-repeat;
	background-size: cover;
	margin: 0;
	// width: 1200px;
	width: 100%;
	height: 697px;
	color: red;
	padding-top: 20px; 
	padding-left: 70px;
	
	&__logo
		position: absolute;
		width: 267px;
		height: 90px;
		
	&__nav
		padding-top: 30px;
		position: absolute;
		left: 573px;
		height: 37px;
		text-transform: uppercase;
		display: inline-block;
		
		
		a 
			padding: 10px 15px;
			font-size: 1.6em;
			color: #fff;
			 
			&:hover
				background-color: #130e27;
				color: white;
				border-radius: 10px;	

	&__info
		position: absolute;
		// top
		top: 264px;
		left: 94px;
		width: 460px;
		color: #fff;
		span:not(:last-of-type) 
			display: block;
			text-transform: uppercase;
			font-size: 66px;
			font-weight: bold;
			
			&:first-of-type
				color: #130e27;
			
			&:nth-of-type(2)
				color: #fff;