.services_sum
	width: 100%;
	margin: 0;
	padding: 0;
	height: 120px;
	background-color: blue;
	color: #fff;
	font-size: 1.3em;
	padding-top: 50px;
	padding-left: 70px;
	display: grid;
	grid-template-rows: 1fr;
	grid-template-columns: 900px 1fr;
		
	span
		display: block;
		width: 600px;
		
	a 
		padding-top: 15px;
		display: block;
		width: 270px;
		height: 45px;
		background-color: red;
		text-align: center;
		text-transform: uppercase;
		border-radius: 5px;